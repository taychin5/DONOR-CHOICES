<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bubble_in_9"
        android:maxWidth="256dp"
        android:padding="6dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imgCharacter"
        app:layout_constraintTop_toTopOf="@+id/imgCharacter" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="date and time"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtMessage"
        app:layout_constraintStart_toEndOf="@+id/txtMessage" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgCharacter"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/giphy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 />
</android.support.constraint.ConstraintLayout>