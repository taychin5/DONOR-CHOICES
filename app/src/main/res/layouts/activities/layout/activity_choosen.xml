<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test_chat_app_two.activities.ChoosenActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/choose_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_trans"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:elevation="5dp"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/choose_toolbar"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FF1978E0"
            android:fontFamily="@font/athiti_medium"
            android:padding="4dp"
            android:text="#ประเทศไทย"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tag2"
            app:layout_constraintTop_toTopOf="@+id/tag1" />

        <Button
            android:id="@+id/goBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:background="@drawable/gradient"
            android:elevation="5dp"
            android:fontFamily="@font/athiti_bold"
            android:text="เริ่มการผจญภัยครั้งใหม่"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/athiti_medium"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mainImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/charity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/athiti_semibold"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerMain" />

        <TextView
            android:id="@+id/desTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="10dp"
            android:background="#451978e0"
            android:fontFamily="@font/athiti_light"
            android:maxLines="3"
            android:padding="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/paragraphtestlong"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag1" />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/mainImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a3" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/jobpic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_job_info"
            app:srcCompat="@drawable/panic_a" />

        <TextView
            android:id="@+id/jobTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/athiti_bold"
            android:text="สตาฟของมูลนิธิ"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jobpic" />

        <TextView
            android:id="@+id/txt_job_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/athiti_medium"
            android:text="บทบาทของคุณคือ"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desTxt" />

        <TextView
            android:id="@+id/charity_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:autoSizeMaxTextSize="10sp"
            android:autoSizeMinTextSize="6sp"
            android:fontFamily="@font/athiti_medium"
            android:text="โครงการเพื่อน้องใหม่"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/charity_name"
            app:layout_constraintStart_toEndOf="@+id/charity_name"
            app:layout_constraintTop_toTopOf="@+id/charity_name" />

        <TextView
            android:id="@+id/headerMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/athiti_semibold"
            android:text="สดุดรัก ที่พักใจนายเลี้ยงลูก"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainImage" />

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FF1978E0"
            android:fontFamily="@font/athiti_medium"
            android:padding="4dp"
            android:text="#สวมบทบาท"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tag1"
            app:layout_constraintTop_toTopOf="@+id/tag1" />

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#FF1978E0"
            android:fontFamily="@font/athiti_medium"
            android:padding="4dp"
            android:text="#เรื่องใหม่"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/athiti_medium"
            android:text="43k views"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/charity_name"
            app:layout_constraintTop_toBottomOf="@+id/charity_name" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/athiti_medium"
            android:text="150k บาท"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
