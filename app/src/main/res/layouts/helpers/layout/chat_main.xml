<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:layout_editor_absoluteY="25dp">


    <RelativeLayout
        android:id="@+id/relativeLayoutBtn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/black_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/chatSendButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@xml/button" />

    </RelativeLayout>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageMain"
        android:layout_width="0dp"
        android:layout_height="272dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sence1_1"
        app:layout_constraintDimensionRatio="w,1:1">

    </pl.droidsonroids.gif.GifImageView>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/messagesContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_chat"
        android:divider="@drawable/gradient_chat"
        android:listSelector="@android:color/transparent"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageMain"
        app:layout_constraintVertical_bias="1.0">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbartop"
        android:layout_width="411dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_bg"
        android:minHeight="?attr/actionBarSize" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/index_character_conLay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/hp_bar"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:foregroundGravity="center"
            android:minHeight="10dp"
            android:progress="25"
            app:layout_constraintBottom_toBottomOf="@+id/MainChar"
            app:layout_constraintEnd_toStartOf="@+id/MainChar"
            app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/MainChar"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sence1_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </pl.droidsonroids.gif.GifImageView>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>